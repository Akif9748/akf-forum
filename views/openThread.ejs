        <h2>Title:</h2> 
        <input name="title"></input>

        <hr>
        <h2>Content:</h2> 
        <textarea rows="4" cols="50" name="content"></textarea>
   
        <hr>
        <button class = "buyuk" type="submit">Open Thread!</button>
    </form>


